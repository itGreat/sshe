		<property name="jdbcDriver" value="com.mysql.jdbc.Driver" />
		<!-- <property name="jdbcUsername" value="sunit" />
		<property name="jdbcPassword" value="sunit" /> -->
		<property name="jdbcUsername" value="sshe" />
		<property name="jdbcPassword" value="sshe" />
		<property name="jobExecutorActivate" value="true" />
		<property name="activityFontName" value="微软雅黑"/>  
        <property name="labelFontName" value="微软雅黑"/> 
	</bean>
</beans>
